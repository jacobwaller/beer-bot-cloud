{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "outDir": "./built",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts?(x)"
  ],
  "include": [
    "packages/client",
    "packages/api",
    "packages/common",
  ]
}